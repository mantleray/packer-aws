  "ssh_username": "ubuntu",
  "instance_type": "t2.small",
  "ssh_username": "ubuntu",
  "ami_name": "packer-quick-start-{{user `build_number`}}",
  "run_tags": {
        "OS_Version": "Ubuntu",
        "Release": "Latest",
        "Runner": "Packer"
