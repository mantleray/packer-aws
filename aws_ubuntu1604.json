    "access_key": "",
    "secret_key": ""
  },

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./scripts/jenkins.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./scripts/setup.sh"
    }
